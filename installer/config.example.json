{
  "sudoPassword": "my_password",
  "packageManagers": [
    {
      "name": "APT",
      "command": "sudo apt",
      "args": ["install", "-y"],
      "packages": [
        "git",
        "curl",
        "gpg",
        "gawk",
        "dirmngr",
        "build-essential",
        "libssl-dev",
        "zlib1g-dev",
        "libbz2-dev",
        "libreadline-dev",
        "libsqlite3-dev",
        "llvm",
        "libncursesw5-dev",
        "xz-utils",
        "tk-dev",
        "libxml2-dev",
        "libxmlsec1-dev",
        "libffi-dev",
        "liblzma-dev",
        "zsh",
        "wslu",
        "linux-tools-virtual",
        "hwdata",
        "scdaemon",
        "librsvg2-dev",
        "libayatana-appindicator3-dev",
        "libwebkit2gtk-4.0-dev",
        "libnss3-tools",
        "jq",
        "ncdu",
        "zip"
      ],
      "preInstall": [
        "sudo add-apt-repository ppa:git-core/ppa",
        "sudo apt update"
      ],
      "postInstall": [
        "sudo apt autoremove -y",
        "sudo update-alternatives --install /usr/local/bin/usbip usbip `/usr/bin/ls /usr/lib/linux-tools/*/usbip | tail -n1` 20"
      ]
    },
    {
      "name": "HomeBrew",
      "command": "brew",
      "args": ["install"],
      "packages": ["gcc", "gh", "btop", "hashicorp/tap/terraform"],
      "preInstall": [
        "export NONINTERACTIVE=1",
        "bash -c \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)\"",
        "eval \"$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)\"",
        "brew tap hashicorp/tap"
      ]
    },
    {
      "name": "ASDF",
      "command": "asdf",
      "isSingleCommand": false,
      "args": ["install"],
      "packages": [
        "nodejs latest",
        "nodejs 16.17.1",
        "golang latest",
        "python latest"
      ],
      "preInstall": [
        "git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.10.2",
        ". $HOME/.asdf/asdf.sh",
        "asdf plugin add nodejs https://github.com/asdf-vm/asdf-nodejs.git",
        "asdf plugin add golang https://github.com/kennyp/asdf-golang.git",
        "asdf plugin add python https://github.com/danhper/asdf-python.git"
      ],
      "postInstall": [
        "asdf global nodejs latest",
        "asdf global golang latest",
        "asdf global python latest"
      ]
    },
    {
      "name": "NPM",
      "command": "npm",
      "args": ["install", "--location=global"],
      "packages": ["yarn", "pnpm", "npm-check-updates"],
      "preInstall": [". $HOME/.asdf/asdf.sh"],
      "postInstall": ["corepack enable"]
    },
    {
      "name": "Cargo",
      "command": "cargo",
      "args": ["install"],
      "packages": ["cargo-edit", "just", "exa", "bat"],
      "preInstall": [
        "curl -sSf https://sh.rustup.rs | sh -s -- -y",
        "source \"$HOME/.cargo/env\""
      ]
    },
    {
      "name": "Go",
      "command": "go",
      "args": ["install"],
      "packages": [
        "github.com/cosmtrek/air@latest",
        "github.com/schollz/croc/v9@latest"
      ],
      "preInstall": [". $HOME/.asdf/asdf.sh"]
    }
  ],
  "git": {
    "config": {
      "commit.gpgsign": "true",
      "init.defaultBranch": "main",
      "push.autoSetupRemote": "true",
      "user.name": "Samuel Corsi-House",
      "user.email": "chouse.samuel@gmail.com"
    },
    "projects": [
      {
        "cwd": "~/projects",
        "repositories": ["Xenfo/cosa-mangiamo", "Xenfo/website", "Xenfo/Xenfo"]
      },
      {
        "cwd": "~/aheeva/projects",
        "repositories": [
          {
            "name": "aheeva/aheeva-msg-center",
            "folder": "msg-center"
          }
        ]
      }
    ]
  },
  "customCommands": [
    {
      "name": "Oh-My-Zsh",
      "commands": [
        "export RUNZSH=no",
        "sh -c \"$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)\"",
        "git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k",
        "git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting"
      ]
    },
    {
      "name": "Bun",
      "commands": ["curl https://bun.sh/install | bash"]
    },
    {
      "name": "Fig",
      "commands": [
        "curl -fsSL https://fig.io/install-headless.sh | INTEGRATIONS=dotfiles bash"
      ]
    },
    {
      "name": "Bottle Imp",
      "commands": [
        "sudo wget -O /etc/apt/trusted.gpg.d/wsl-transdebian.gpg https://arkane-systems.github.io/wsl-transdebian/apt/wsl-transdebian.gpg",
        "sudo chmod a+r /etc/apt/trusted.gpg.d/wsl-transdebian.gpg",
        "sudo cat << EOF > /etc/apt/sources.list.d/wsl-transdebian.list\ndeb https://arkane-systems.github.io/wsl-transdebian/apt/ $(lsb_release -cs) main\ndeb-src https://arkane-systems.github.io/wsl-transdebian/apt/ $(lsb_release -cs) main\nEOF",
        "sudo apt update",
        "sudo apt install bottle-imp"
      ]
    }
  ],
  "copier": {
    "configDir": "./configs"
  }
}
